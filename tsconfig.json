{
  "compilerOptions": {
    /* 基础配置 */
    "target": "ES5",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "removeComments": false,
    "sourceMap": false,
    "allowJs": true,
    /* 强类型检查配置 */
    "strict": true,
    "noImplicitAny": true,
    /* 模块分析配置 */
    "baseUrl": ".",
    "outDir": "lib",
    "declaration": true,
    "declarationDir": "lib",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "include": [
    "src",
    "script",
    "./typings"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
